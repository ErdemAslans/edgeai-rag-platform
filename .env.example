# Application
APP_NAME=EdgeAI-RAG-Platform
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/edgeai_rag
DATABASE_POOL_SIZE=10

# ===========================================
# LLM Configuration (FREE PROVIDERS)
# ===========================================
# Choose provider: groq (cloud, free) or ollama (local, unlimited)
LLM_PROVIDER=groq

# Groq - FREE tier: 6000 requests/day, 6000 tokens/min
# Get API key: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Ollama - FREE unlimited (requires local GPU)
# Install: https://ollama.ai/download
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ===========================================
# Embedding Configuration (FREE - CPU-based)
# ===========================================
# Choose provider: huggingface (CPU, works on any hardware) or ollama (GPU required)
# Recommended for GTX 1650 Ti (4GB VRAM): huggingface
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# Vector Search
VECTOR_SIMILARITY_THRESHOLD=0.7

# JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=["pdf", "txt"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Edge Collector API Key (for secure edge-to-cloud communication)
EDGE_COLLECTOR_API_KEY=your-edge-collector-api-key-change-in-production